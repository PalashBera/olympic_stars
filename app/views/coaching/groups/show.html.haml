- provide(:page_title, @group.name)
- provide(:page_header, @group.name)

.page-card
  .card-header.card-nav-header
    %ul.nav.nav-tabs.card-header-tabs
      %li.nav-item
        = link_to "Details", coaching_group_path(@group), class: "nav-link active"
      %li.nav-item
        = link_to "Attendance", "#", class: "nav-link"

  .page-card-body
    .row.g-3
      .col-lg-6
        .table-responsive
          %table.table.table-sm.details-table
            %tbody
              %tr
                %td Name
                %td= @group.name

              %tr
                %td Teacher
                %td= link_to @group.teacher_full_name, personal_teacher_path(@group.teacher_id), title: "Show teacher"

              %tr
                %td Client Type
                %td= @group.client_type_name

              %tr
                %td Quota
                %td= @group.quota

              %tr
                %td Schedule
                %td= display_schedule_set(@group)

              %tr
                %td Duration
                %td= "#{@group.start_time} - #{@group.end_time}"

              %tr
                %td Status
                %td= @group.archived_status
