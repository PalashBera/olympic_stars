- provide(:page_title, "Groups")
- provide(:page_header, "Groups")

.page-card
  .page-card-header
    = link_to "Add New", new_coaching_group_path, class: "btn btn-primary ms-0", data: { turbo_frame: "remote_modal_form" }, title: "Add new group"
    %button.btn.btn-light(type="button" data-bs-toggle="modal" data-bs-target="#importModal" title="Import groups") Import
    = link_to "Export", export_coaching_groups_path(q: params[:q]&.to_unsafe_h.to_h, format: "xlsx"), title: "Export groups", class: "btn btn-light me-0"

  .page-card-body
    - if @groups.present?
      = render "table"
      = render "shared/pagy"
    - else
      = render "shared/empty_record"

= render "shared/import_modal", title: "Import Groups", path: import_coaching_groups_path
