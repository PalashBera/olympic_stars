.table-responsive
  %table.table
    %thead
      %tr
        %th{scope: "col"}= sort_link @search, :name, "Name"
        %th{scope: "col"}= sort_link @search, :fee, "Fee"
        %th{scope: "col"} Students Count
        %th{scope: "col"}= sort_link @search, :archived, "Status"
        %th.text-center{scope: "col"} Actions

    %tbody
      - @courses.each do |course|
        %tr
          %td{scope: "row"}= course.name
          %td= course.fee_with_currency
          %td= course.students.size
          %td= course.archived_status
          %td.text-center
            = link_to "Edit", edit_coaching_course_path(course), title: "Edit course", class: "btn btn-primary btn-sm ms-0", data: { turbo_frame: "remote_modal_form" }
            = link_to "History", change_logs_coaching_course_path(course), title: "Show history", class: "btn btn-light btn-sm", data: { turbo_frame: "remote_modal_form" }
            = link_to "Delete", coaching_course_path(course), title: "Delete course", class: "btn btn-danger-light btn-sm me-0", data: { "turbo-method": :delete, turbo_confirm: "Are you sure you want to delete the course?" }
