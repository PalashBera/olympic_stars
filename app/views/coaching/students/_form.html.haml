= form_for [:coaching, resource] do |f|
  .row
    .col-md-6.col-lg-4.mb-3
      = f.label :first_name, class: "form-label required"
      = f.text_field :first_name, autofocus: true, placeholder: "Enter first name", class: "form-control", required: true, maxlength: 255
      - if resource.errors.include?(:first_name)
        .secondary-text.text-danger
          - resource.errors.full_messages_for(:first_name).each do |error_message|
            = "#{error_message}. "

    .col-md-6.col-lg-4.mb-3
      = f.label :last_name, class: "form-label required"
      = f.text_field :last_name, placeholder: "Enter last name", class: "form-control", required: true, maxlength: 255
      - if resource.errors.include?(:last_name)
        .secondary-text.text-danger
          - resource.errors.full_messages_for(:last_name).each do |error_message|
            = "#{error_message}. "

    .col-md-6.col-lg-4.mb-3
      = f.label :student_code, class: "form-label required"
      = f.text_field :student_code, placeholder: "Enter student code", class: "form-control", required: true, maxlength: 255
      - if resource.errors.include?(:student_code)
        .secondary-text.text-danger
          - resource.errors.full_messages_for(:student_code).each do |error_message|
            = "#{error_message}. "

    .col-md-6.col-lg-4.mb-3
      = f.label :date_of_birth, class: "form-label required"
      = f.text_field :date_of_birth, value: I18n.l(resource.date_of_birth, default: ""), placeholder: "DD/MM/YYYY", class: "form-control date-picker", autocomplete: :off, required: true, pattern: "(?:((?:0[1-9]|1[0-9]|2[0-9])\/(?:0[1-9]|1[0-2])|(?:30)\/(?!02)(?:0[1-9]|1[0-2])|31\/(?:0[13578]|1[02]))\/(?:19|20)[0-9]{2})"
      - if resource.errors.include?(:date_of_birth)
        .secondary-text.text-danger
          - resource.errors.full_messages_for(:date_of_birth).each do |error_message|
            = "#{error_message}. "

    .col-md-6.col-lg-4.mb-3
      = f.label :school_name, class: "form-label"
      = f.text_field :school_name, placeholder: "Enter school name", class: "form-control", maxlength: 255
      - if resource.errors.include?(:school_name)
        .secondary-text.text-danger
          - resource.errors.full_messages_for(:school_name).each do |error_message|
            = "#{error_message}. "

    .col-md-6.col-lg-4.mb-3
      = f.label :allergies, class: "form-label"
      = f.text_field :allergies, placeholder: "Enter allergies", class: "form-control", maxlength: 255
      - if resource.errors.include?(:allergies)
        .secondary-text.text-danger
          - resource.errors.full_messages_for(:allergies).each do |error_message|
            = "#{error_message}. "

    .col-md-6.col-lg-4.mb-3
      = f.label :registration_date, class: "form-label required"
      = f.text_field :registration_date, value: I18n.l(resource.registration_date, default: ""), placeholder: "DD/MM/YYYY", class: "form-control date-picker", autocomplete: :off, required: true, pattern: "(?:((?:0[1-9]|1[0-9]|2[0-9])\/(?:0[1-9]|1[0-2])|(?:30)\/(?!02)(?:0[1-9]|1[0-2])|31\/(?:0[13578]|1[02]))\/(?:19|20)[0-9]{2})"
      - if resource.errors.include?(:registration_date)
        .secondary-text.text-danger
          - resource.errors.full_messages_for(:registration_date).each do |error_message|
            = "#{error_message}. "

    .col-md-6.col-lg-4.mb-3
      = f.label :client_type_id, class: "form-label required"
      = f.select :client_type_id, client_type_list(@student.client_type_id), { prompt: "Select client type" }, { class: "selectize", required: true }
      - if resource.errors.include?(:client_type_id)
        .secondary-text.text-danger
          - resource.errors.full_messages_for(:client_type_id).each do |error_message|
            = "#{error_message}. "

    .col-md-6.col-lg-4.mb-3
      = f.label :course_id, class: "form-label required"
      = f.select :course_id, course_list(@student.course_id), { prompt: "Select course" }, { class: "selectize", required: true }
      - if resource.errors.include?(:course_id)
        .secondary-text.text-danger
          - resource.errors.full_messages_for(:course_id).each do |error_message|
            = "#{error_message}. "

    .col-md-6.col-lg-4.mb-3
      = f.label :mother_name, class: "form-label required"
      = f.text_field :mother_name, placeholder: "Enter mother name", class: "form-control", required: true, maxlength: 255
      - if resource.errors.include?(:mother_name)
        .secondary-text.text-danger
          - resource.errors.full_messages_for(:mother_name).each do |error_message|
            = "#{error_message}. "

    .col-md-6.col-lg-4.mb-3
      = f.label :mother_email, class: "form-label required"
      = f.email_field :mother_email, placeholder: "Enter mother email", class: "form-control", required: true, maxlength: 255
      - if resource.errors.include?(:mother_email)
        .secondary-text.text-danger
          - resource.errors.full_messages_for(:mother_email).each do |error_message|
            = "#{error_message}. "

    .col-md-6.col-lg-4.mb-3
      = f.label :mother_phone_number, class: "form-label"
      = f.text_field :mother_phone_number, placeholder: "Enter mother phone number", class: "form-control"
      - if resource.errors.include?(:mother_phone_number)
        .secondary-text.text-danger
          - resource.errors.full_messages_for(:mother_phone_number).each do |error_message|
            = "#{error_message}. "

    .col-md-6.col-lg-4.mb-3
      = f.label :father_name, class: "form-label required"
      = f.text_field :father_name, placeholder: "Enter father name", class: "form-control", required: true, maxlength: 255
      - if resource.errors.include?(:father_name)
        .secondary-text.text-danger
          - resource.errors.full_messages_for(:father_name).each do |error_message|
            = "#{error_message}. "

    .col-md-6.col-lg-4.mb-3
      = f.label :father_email, class: "form-label required"
      = f.email_field :father_email, placeholder: "Enter father email", class: "form-control", required: true, maxlength: 255
      - if resource.errors.include?(:father_email)
        .secondary-text.text-danger
          - resource.errors.full_messages_for(:father_email).each do |error_message|
            = "#{error_message}. "

    .col-md-6.col-lg-4.mb-3
      = f.label :father_phone_number, class: "form-label"
      = f.text_field :father_phone_number, placeholder: "Enter father phone number", class: "form-control"
      - if resource.errors.include?(:father_phone_number)
        .secondary-text.text-danger
          - resource.errors.full_messages_for(:father_phone_number).each do |error_message|
            = "#{error_message}. "

    .col-12.mb-3
      = f.label :address, class: "form-label"
      = f.text_area :address, placeholder: "Enter address", class: "form-control", row: 3
      - if resource.errors.include?(:address)
        .secondary-text.text-danger
          - resource.errors.full_messages_for(:address).each do |error_message|
            = "#{error_message}. "

    .col-12.mb-3
      = f.label :remarks, class: "form-label"
      = f.text_area :remarks, placeholder: "Enter remarks", class: "form-control", row: 3
      - if resource.errors.include?(:remarks)
        .secondary-text.text-danger
          - resource.errors.full_messages_for(:remarks).each do |error_message|
            = "#{error_message}. "

    .col-md-6.col-lg-4.mb-3
      .form-check
        = f.check_box :facebook, class: "form-check-input"
        = f.label :facebook, class: "form-check-label"

    .col-md-6.col-lg-4.mb-3
      .form-check
        = f.check_box :pro_client, class: "form-check-input"
        = f.label :pro_client, class: "form-check-label"

    .col-md-6.col-lg-4.mb-3
      .form-check
        = f.check_box :archived, class: "form-check-input"
        = f.label :archived, class: "form-check-label"

  .actions.form-btn-group
    %button.btn.btn-light.ms-0{type: "button", "data-bs-dismiss": "modal", title: "Cancel"} Cancel
    = f.submit resource.button_name, title: "Save #{resource.class_title.downcase}", class: "btn btn-primary me-0"

:javascript
  $('.selectize').selectize();

  $('.date-picker').datepicker({
    format: 'dd/mm/yyyy',
    autoclose: true,
    clearBtn: true,
    endDate: new Date()
  });
