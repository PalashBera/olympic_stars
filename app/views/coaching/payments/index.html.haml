- provide(:page_title, @student.full_name)
- provide(:page_header, @student.full_name)

.page-card
  .card-header.card-nav-header
    = render "coaching/shared/student_tabs", active_nav: "payments"

  .page-card-body
    .card-body-header.d-flex.justify-content-between.align-items-center
      = link_to "Add New", new_coaching_student_payment_path(@student), class: "btn btn-primary m-0", data: { turbo_frame: "remote_modal_form" }, title: "Add new payment"

    - if @payments.present?
      = render "table"
      = render "shared/pagy"
    - else
      = render "shared/empty_record"
