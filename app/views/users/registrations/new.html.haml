- provide(:page_title, "Sign up")

.auth-flash-message
  = render "shared/flash_message"

.auth-card
  %h5.margin-bottom-30 Sign up

  .form-container
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "shared/error_messages", resource: resource

      .mb-3
        = f.label :first_name, class: "form-label"
        = f.text_field :first_name, autofocus: true, autocomplete: "first-name", class: "form-control", required: true, maxlength: 255

      .mb-3
        = f.label :last_name, class: "form-label"
        = f.text_field :last_name, autocomplete: "last-name", class: "form-control", required: true, maxlength: 255

      .mb-3
        = f.label :email, class: "form-label"
        = f.email_field :email, autocomplete: "email", class: "form-control", required: true, maxlength: 255

      .mb-3
        = f.label :password, class: "form-label"
        = f.password_field :password, autocomplete: "new-password", class: "form-control", required: true, minlength: 6, maxlength: 128
        - if @minimum_password_length
          .secondary-text
            Password length should be minimum #{@minimum_password_length} characters.
      .mb-3
        = f.label :password_confirmation, class: "form-label"
        = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true, minlength: 6, maxlength: 128

      .actions
        = f.submit "Sign up", class: "btn btn-primary m-0"

  %hr.my-4/
  = render "users/shared/links"
