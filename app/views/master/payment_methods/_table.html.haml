.table-responsive
  %table.table
    %thead
      %tr
        %th{scope: "col"}= sort_link @search, :name, "Name"
        %th{scope: "col"}= sort_link @search, :archived, "Status"
        %th.text-center{scope: "col"} Actions

    %tbody
      - @payment_methods.each do |payment_method|
        %tr
          %td{scope: "row"}= payment_method.name
          %td= payment_method.archived_status
          %td.text-center
            = link_to "Edit", edit_master_payment_method_path(payment_method), title: "Edit payment method", class: "btn btn-primary btn-sm ms-0", data: { turbo_frame: "remote_modal_form" }
            = link_to "History", change_logs_master_payment_method_path(payment_method), title: "Show history", class: "btn btn-light btn-sm", data: { turbo_frame: "remote_modal_form" }
            = link_to "Delete", master_payment_method_path(payment_method), title: "Delete payment method", class: "btn btn-danger-light btn-sm me-0", data: { "turbo-method": :delete, turbo_confirm: "Are you sure you want to delete the payment method?" }
