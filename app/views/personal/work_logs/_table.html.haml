.table-responsive
  %table.table
    %thead
      %tr
        %th{scope: "col"}= sort_link @search, :date, "Date"
        %th{scope: "col"}= sort_link @search, :hours, "Hours"
        %th{scope: "col"}= sort_link @search, :created_by_first_name, "Created By"
        %th{scope: "col"}= sort_link @search, :created_at, "Created At"
        %th.text-center{scope: "col"} Actions

    %tbody
      - @work_logs.each do |work_log|
        %tr
          %td{scope: "row"}= I18n.l(work_log.date, default: "")
          %td= display_amount(work_log.hours)
          %td= work_log.creator_name
          %td= I18n.l(work_log.created_at, default: "")

          %td.text-center
            = link_to "Edit", edit_personal_teacher_work_log_path(work_log.teacher_id, work_log), title: "Edit work log", class: "btn btn-primary btn-sm ms-0", data: { turbo_frame: "remote_modal_form" }
            = link_to "History", change_logs_personal_teacher_work_log_path(work_log.teacher_id, work_log), title: "Show history", class: "btn btn-light btn-sm", data: { turbo_frame: "remote_modal_form" }
            = link_to "Delete",  personal_teacher_work_log_path(work_log.teacher_id, work_log), title: "Delete work log", class: "btn btn-danger-light btn-sm me-0", data: { "turbo-method": :delete, turbo_confirm: "Are you sure you want to delete the work log?" }
