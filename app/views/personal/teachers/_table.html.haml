.table-responsive
  %table.table
    %thead
      %tr
        %th{scope: "col"}= sort_link @search, :name, "Name"
        %th{scope: "col"}= sort_link @search, :email, "Email"
        %th{scope: "col"}= sort_link @search, :archived, "Status"
        %th{scope: "col"} Actions

    %tbody
      - @teachers.each do |teacher|
        %tr
          %td{scope: "row"}= link_to teacher.full_name, personal_teacher_path(teacher), title: "Show Detail"
          %td= teacher.email
          %td= teacher.archived_status
          %td
            = link_to "Edit", edit_personal_teacher_path(teacher), title: "Edit teacher", class: "btn btn-primary btn-sm ms-0", data: { turbo_frame: "remote_modal_form" }
            = link_to "History", change_logs_personal_teacher_path(teacher), title: "Show history", class: "btn btn-light btn-sm", data: { turbo_frame: "remote_modal_form" }
            = link_to "Delete", personal_teacher_path(teacher), title: "Delete teacher", class: "btn btn-danger-light btn-sm me-0", data: { "turbo-method": :delete, turbo_confirm: "Are you sure you want to delete the teacher?" }
