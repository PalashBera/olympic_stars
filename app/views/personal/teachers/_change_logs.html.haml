%p
  #{@resource.full_name} has been created by #{@resource.creator_name} on #{I18n.l(@resource.created_at)}.

- @versions.each_with_index do |version, index|
  %hr/

  .secondary-text.mb-2
    Change Log #{@versions.size - index} â€“ Done by #{version.whodunnit} on #{I18n.l(version.created_at)}

  .table-responsive
    %table.table.table-sm
      %thead
        %th Field Name
        %th Previous Value
        %th Current Value

      %tbody
        - version.changeset.each do |key, value|
          %tr
            - if key == "first_name"
              %td First name
              %td= value[0]
              %td= value[1]

            - if key == "last_name"
              %td Last name
              %td= value[0]
              %td= value[1]

            - if key == "email"
              %td Email
              %td= value[0]
              %td= value[1]

            - if key == "date_of_birth"
              %td Date of birth
              %td= I18n.l(value[0], default: "")
              %td= I18n.l(value[1], default: "")

            - if key == "phone_number"
              %td Phone number
              %td= value[0]
              %td= value[1]

            - if key == "mobile_number"
              %td Mobile number
              %td= value[0]
              %td= value[1]

            - if key == "wages_per_day"
              %td Wages per day
              %td= amount_with_currency(value[0])
              %td= amount_with_currency(value[1])

            - if key == "wages_per_hour"
              %td Wages per hour
              %td= amount_with_currency(value[0])
              %td= amount_with_currency(value[1])

            - if key == "wages_per_month"
              %td Wages per month
              %td= amount_with_currency(value[0])
              %td= amount_with_currency(value[1])

            - if key == "availability"
              %td Availability
              %td= raw(display_text(value[0]))
              %td= raw(display_text(value[1]))

            - if key == "archived"
              %td Status
              %td= archive_status(value[0])
              %td= archive_status(value[1])
