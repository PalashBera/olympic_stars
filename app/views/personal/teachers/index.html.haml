- provide(:page_title, "Teachers")
- provide(:page_header, "Teachers")

.page-card
  .page-card-header
    = link_to "Add New", new_personal_teacher_path, class: "btn btn-primary m-0", data: { turbo_frame: "remote_modal_form" }, title: "Add new teacher"
    = link_to "Export", export_personal_teachers_path(q: params[:q]&.to_unsafe_h.to_h, format: "xlsx"), title: "Export teachers", class: "btn btn-light me-0"

  .page-card-body
    - if @teachers.present?
      = render "table"
      = render "shared/pagy"
    - else
      = render "shared/empty_record"
