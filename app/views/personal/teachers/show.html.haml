- provide(:page_title, @teacher.full_name)
- provide(:page_header, @teacher.full_name)

.page-card
  .card-header.card-nav-header
    = render "personal/shared/teacher_tabs", active_nav: "details"

  .page-card-body
    .d-flex.align-items-center.justify-content-between
      .secondary-header.mb-3.mb-lg-4= @teacher.full_name
      .actions-block
        = link_to raw("<i class='bi bi-pencil-fill'></i>"), edit_personal_teacher_path(@teacher), title: "Edit teacher", class: "icon-btn", data: { turbo_frame: "remote_modal_form" }
        = link_to raw("<i class='bi bi-clock-fill'></i>"), change_logs_personal_teacher_path(@teacher), title: "Show history", class: "icon-btn", data: { turbo_frame: "remote_modal_form" }
        = link_to raw("<i class='bi bi-trash3-fill'></i>"), personal_teacher_path(@teacher), title: "Delete teacher", class: "icon-btn text-danger", data: { "turbo-method": :delete, turbo_confirm: "Are you sure you want to delete the teacher?" }

    .row.g-3
      .col-lg-6
        .table-responsive
          %table.table.table-sm.details-table
            %tbody
              %tr
                %td Email
                %td
                  %a(href="mailto: #{@teacher.email}")= @teacher.email

              %tr
                %td Phone number
                %td
                  %a(href="tel:#{@teacher.phone_number}")= @teacher.phone_number

              %tr
                %td Mobile number
                %td
                  %a(href="tel:#{@teacher.mobile_number}")= @teacher.mobile_number

              %tr
                %td Date of birth
                %td= I18n.l(@teacher.date_of_birth, default: "")

              %tr
                %td Wages per hour
                %td= amount_with_currency(@teacher.wages_per_hour)

              %tr
                %td Wages per day
                %td= amount_with_currency(@teacher.wages_per_day)

              %tr
                %td Wages per month
                %td= amount_with_currency(@teacher.wages_per_month)

              %tr
                %td Availability
                %td= raw(display_text(@teacher.availability))

              %tr
                %td Status
                %td= @teacher.archived_status

      .col-lg-6
        .table-responsive
          %table.table.table-sm.details-table
            %tbody
              %tr
                %td Assigned groups
                %td= @teacher.assigned_groups

              %tr
                %td This week work hours
                %td= display_amount(@teacher.this_week_work_hours)

              %tr
                %td This month work hours
                %td= display_amount(@teacher.this_month_work_hours)

              %tr
                %td This year work hours
                %td= display_amount(@teacher.this_year_work_hours)

              %tr
                %td Total work hours
                %td= display_amount(@teacher.total_work_hours)

              %tr
                %td Total billed work hours
                %td= display_amount(@teacher.total_billed_work_hours)

              %tr
                %td Total unbilled work hours
                %td= display_amount(@teacher.total_unbilled_work_hours)

              %tr
                %td Total paid amount
                %td= amount_with_currency(@teacher.total_paid_amount)

              %tr
                %td Total unpaid amount
                %td= amount_with_currency(@teacher.total_unpaid_amount)
