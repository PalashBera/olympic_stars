- provide(:page_title, @teacher.full_name)
- provide(:page_header, @teacher.full_name)

.page-card
  .card-header.card-nav-header
    = render "personal/shared/teacher_tabs", active_nav: "teacher_payments"

  .page-card-body
    .card-body-header.d-flex.justify-content-between.align-items-center
      = link_to "Add New", new_personal_teacher_teacher_payment_path(@teacher), class: "btn btn-primary m-0", data: { turbo_frame: "remote_modal_form" }, title: "Add new payment"

    - if @teacher_payments.present?
      = render "table"
      = render "shared/pagy"
    - else
      = render "shared/empty_record"
