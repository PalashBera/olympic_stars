= form_for [:personal, @teacher, @teacher_payment] do |f|
  .row
    .col-md-6.mb-3
      = f.label :date, class: "form-label required"
      = f.date_field :date, placeholder: "Enter date", class: "form-control", required: true, max: Date.today
      - if resource.errors.include?(:date)
        .secondary-text.text-danger
          - resource.errors.full_messages_for(:date).each do |error_message|
            = "#{error_message}. "

    .col-md-6.mb-3
      = f.label :payment_type_id, class: "form-label required"
      = f.select :payment_type_id, payment_type_list(@teacher_payment.payment_type_id), { prompt: "Select payment type" }, { class: "form-control", required: true }
      - if resource.errors.include?(:payment_type_id)
        .secondary-text.text-danger
          - resource.errors.full_messages_for(:payment_type_id).each do |error_message|
            = "#{error_message}. "

    .col-md-6.mb-3
      = f.label :work_hours, class: "form-label required"
      = f.number_field :work_hours, value: display_form_amount(resource.work_hours), placeholder: "Enter work hours", class: "form-control", required: true, step: 0.01, min: 0
      - if resource.errors.include?(:work_hours)
        .secondary-text.text-danger
          - resource.errors.full_messages_for(:work_hours).each do |error_message|
            = "#{error_message}. "

    .col-md-6.mb-3
      = f.label :wage_per_hour, class: "form-label required"
      = f.number_field :wage_per_hour, value: display_form_amount(resource.wage_per_hour), placeholder: "Enter wage per hour", class: "form-control", required: true, step: 0.01, min: 0
      - if resource.errors.include?(:wage_per_hour)
        .secondary-text.text-danger
          - resource.errors.full_messages_for(:wage_per_hour).each do |error_message|
            = "#{error_message}. "

    .col-md-6.mb-3
      = f.label :discount, class: "form-label"
      = f.number_field :discount, value: display_form_amount(resource.discount), placeholder: "Enter discount", class: "form-control", step: 0.01, min: 0
      - if resource.errors.include?(:discount)
        .secondary-text.text-danger
          - resource.errors.full_messages_for(:discount).each do |error_message|
            = "#{error_message}. "

    .col-md-6.mb-3
      = f.label :payment_method_id, class: "form-label required"
      = f.select :payment_method_id, payment_method_list(@teacher_payment.payment_method_id), { prompt: "Select payment method" }, { class: "form-control", required: true }
      - if resource.errors.include?(:payment_method_id)
        .secondary-text.text-danger
          - resource.errors.full_messages_for(:payment_method_id).each do |error_message|
            = "#{error_message}. "

    .col-md-12.mb-3
      = f.label :details, class: "form-label"
      = f.text_field :details, placeholder: "Enter details", class: "form-control", maxlength: 255
      - if resource.errors.include?(:details)
        .secondary-text.text-danger
          - resource.errors.full_messages_for(:details).each do |error_message|
            = "#{error_message}. "

    .col-md-6.mb-3
      = f.label :status, class: "form-label required"
      = f.select :status, teacher_payment_status_dropdown_list, { prompt: "Select status" }, { class: "form-control", required: true }
      - if resource.errors.include?(:status)
        .secondary-text.text-danger
          - resource.errors.full_messages_for(:status).each do |error_message|
            = "#{error_message}. "

  .actions.form-btn-group
    %button.btn.btn-light.ms-0{type: "button", "data-bs-dismiss": "modal", title: "Cancel"} Cancel
    = f.submit resource.button_name, title: "Save #{resource.class_title.downcase}", class: "btn btn-primary me-0"
